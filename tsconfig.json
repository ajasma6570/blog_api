{
  "compilerOptions": {
    "target": "es6" ,
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./build",
    "removeComments": true,
    "lib": ["DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*":[
        "src/*"
      ]
    },
    "typeRoots": ["./src/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}